{{#extend "title"}}
    Badge Controls
{{/extend}}
<section class="section header">
    <div class="container">
        <h1 class="title">Badge Controls</h1>

        <a href="/admin/badges/new" class="button">New Badge</a>
    </div>
</section>
<section class="section">
    <div class="container">
        {{#if badge_list}}
            <table class="table">
                <thead>
                    <tr>
                        <th><abbr title="badge_id">ID</abbr></th>
                        <th><abbr title="name">Name</abbr></th>
                        <th><abbr title="description">DESC</abbr></th>
                        <th><abbr title="icon">icon</abbr></th>
                        <th><abbr title="hidden">H?</abbr></th>
                        <th><abbr title="code">Code</abbr></th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each badge_list}}
                        <tr>
                            <th>{{badge_id}}</th>
                            <td>{{name}}</td>
                            <td>{{description}}</td>
                            <td>{{>badge icon=icon}}</td>
                            <td>{{hidden}}</td>
                            <td><code>{{code}}</code></td>
                            <td><a href="/admin/badges/edit/{{badge_id}}">Edit</a></td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        {{else}}
            <p>No badges found!</p>
        {{/if}}
    </div>
</section>
