{{#extend 'title'}}
  Config
{{/extend}}
<section class='section header'>
  <h1 class='title'>Game Config</h1>
</section>
<section class='section'>
  <form action='' method='POST'>
    <div class='field'>
      <label class='label'>Week</label>
      <div class='control'>
        <input class='input' name='week' type='number' placeholder='{{config.week}}' value='{{config.week}}' min='-1' max='100' />
      </div>
      <p class="help">Current week of program</p>
    </div>

    <div class='field'>
      <label class='label'>Chips per project</label>
      <div class='control'>
        <input class='input' name='pointsPerProject' type='number' placeholder='{{config.pointsPerProject}}' value='{{config.pointsPerProject}}' min='1' />
      </div>
      <p class="help">Chips granted upon required module completion</p>
    </div>

    <div class='columns field mb-0'>
      <div class='column'>
        <label class='label'>Stage Event Name</label>
        <div class='control'>
          <input class='input' name='stageEventName' type='text' placeholder='{{config.stageEventName}}' value='{{config.stageEventName}}' />
        </div>
        <p class="help">Name of live stage event</p>
      </div>
      <div class='column'>
        <label class='label'>Stage Embed URL</label>
        <div class='control'>
          <input class='input' name='stageUrl' type='text' placeholder='{{config.stageUrl}}' value='{{config.stageUrl}}' />
        </div>
        <p class="help">URL of live stage event</p>
      </div>
    </div>
    <div class='field'>
      <label class='label'>Weekly Badges</label>
      <div class='control'>
        <input class='input' name='weeklyBadges' type='text' placeholder='{{config.weeklyBadges}}' value='{{config.weeklyBadges}}' />
      </div>
      <p class="help">Input a comma separated list of badge IDs here :)</p>
    </div>

    <div class='field mt-4'>
      <label class="checkbox">
        <input name='exchange' type='checkbox' value='true' {{#eq config.exchange "true"}}checked{{/eq}} />
        Enable Roulette Exchange?
      </label>
      <p class="help">Enables the exchange shop</p>
    </div>

    <div class="field">
      <label class="checkbox">
        <input name='hardwareWeek' type='checkbox' value='true' {{#eq config.hardwareWeek "true"}}checked{{/eq}} />
        Hardware Week?
      </label>
      <p class="help"><code>project_id_override</code> will replace project pools in current week</p>
    </div>

    <div class='field is-grouped mt-5'>
      <div class='control'>
        <button type='submit' class='button is-link'>Save</button>
      </div>
      <div class='control'>
        <button type='reset' class='button is-light'>Clear</button>
      </div>
    </div>
  </form>
</section>
